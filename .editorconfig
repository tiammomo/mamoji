root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,kt}]
indent_size = 4
max_line_length = 120

[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

[*.json,*.yml,*.yaml]
indent_size = 2

[*.xml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

[Makefile]
indent_style = tab

[*.sh]
indent_style = space
indent_size = 2
